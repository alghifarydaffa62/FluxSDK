{
  "compilerOptions": {
    "target": "ES2022",        
    "lib": ["ES2022", "DOM"], 
    "module": "ESNext",              
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true       
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}